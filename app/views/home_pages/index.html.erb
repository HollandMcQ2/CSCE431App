
<div style="text-align:center">
    <h1><%= @home_page.heading%></h1>
</div>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <% if @home_page.slider_image_1.attached? %>
                <div style="display: flex; justify-content: center;"><img class="d-block h-50 w-50" src="<%=(url_for(@home_page.slider_image_1))%>"></div>
            <% else %>
                <img class="d-block w-100" src="https://placeimg.com/1080/500/animals" alt="First slide">
            <% end %>
        </div>

        <div class="carousel-item">
            <% if @home_page.slider_image_2.attached? %>
            <div style="display: flex; justify-content: center;"><img class="d-block h-50 w-50" src="<%=(url_for(@home_page.slider_image_2))%>"></div>
            <% else %>
                <img class="d-block w-100" src="https://placeimg.com/1080/500/animals" alt="First slide">
            <% end %>
        </div>
        <div class="carousel-item">
            <% if @home_page.slider_image_3.attached? %>
                <div style="display: flex; justify-content: center;"><img class="d-block h-50 w-50" src="<%=(url_for(@home_page.slider_image_3))%>"></div>
            <% else %>
                <img class="d-block w-100" src="https://placeimg.com/1080/500/animals" alt="First slide">
            <% end %>
        </div>
        <div class="carousel-item">
            <% if @home_page.slider_image_4.attached? %>
            <div style="display: flex; justify-content: center;"><img class="d-block h-50 w-50" src="<%=(url_for(@home_page.slider_image_4))%>"></div>
            <% else %>
                <img class="d-block w-100" src="https://placeimg.com/1080/500/animals" alt="First slide">
            <% end %>
        </div>
        <div class="carousel-item">
            <% if @home_page.slider_image_5.attached? %>
            <div style="display: flex; justify-content: center;"><img class="d-block h-50 w-50" src="<%=(url_for(@home_page.slider_image_5))%>"></div>
            <% else %>
                <img class="d-block w-100" src="https://placeimg.com/1080/500/animals" alt="First slide">
            <% end %>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div style="text-align:center">
    <h3><%= @home_page.summary%></h3>
</div>




