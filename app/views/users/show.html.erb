<body>
        

    <div class="container">
        <h1 class="mb-5 text-center">TSAT Member Dashboard</h1>
        <div class="row">
            <div class="col-sm">
                <%= link_to "Events", events_path, {class:"btn btn-primary btn-block my-auto" }%>
            </div>
            <div class="col-sm">
                <%= link_to "Attendance", edit_user_path(current_user.id), {class:"btn btn-primary btn-block my-auto" } %>
            </div>
            <div class="col-sm">
                <%= link_to "Pay Dues", payment_user_path(current_user.id), {class:"btn btn-primary btn-block my-auto" } %>
            </div>

            <% if current_user.role == 'admin' %>
                <div class="col-sm">
                    <%= link_to "Members", user_root_path(current_user.id), {class:"btn btn-primary btn-block my-auto" } %>
                </div>
				<div class="col-sm">
					<%= link_to "'Contact Us' Messages", contact_forms_path, {class: "btn btn-primary btn-block my-auto" } %>
				</div>
            <% end %>
        </div>
    </div>
</body>



